---
import { MenuNavBar } from "./navbar";
import { Icons } from "./icons";
---
<div class="glass  h-12 absolute top-0 inset-x-0 z-30">
  <Icons client:media="min-width: 48rem" />
<nav class=" w-full h-12 grid grid-cols-1 md:grid-cols-2 fixed top-0   z-30">
  <MenuNavBar className="col-start-1 col-end-2  md:col-start-2 md:col-end-3 w-full md:w-1/2 justify-self-center"  client:only />
</nav>
</div>
<style>
.glass {
  /* From https://css.glass */
  background: rgba(0, 0, 0, 0.06);
  border-radius: 16px;
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(6px);
  -webkit-backdrop-filter: blur(6px);
  margin-right: 6px;
  margin-left: 6px;
  display: flex;
  flex-direction: row;
  width: calc(100% - 12px);
}

</style>

