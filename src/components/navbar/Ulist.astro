---
import type { ItemType } from "./item.d";
interface Props {
  itemType: ItemType[];
}
const { itemType } = Astro.props;
---

<div class="ul-container">
  <ul>
    {
      itemType.map((el) => {
        return (
          <li
            class:list={[
              "flex flex-row justify-center items-center",
              " w-full h-9",
            ]}
          >
            <a
              href={el.path}
              class:list={["text-pink-600 hover:text-cyan-500"]}
            >
              {el.name}
            </a>
          </li>
        );
      })
    }
  </ul>
</div>
<style>
  div.ul-container {
    position: absolute;
    top: 0;
    z-index: 50;
    width: 100%;
    min-height: 15vh;
    display: flex;
    flex-direction: column;
  }
  ul {
    margin-top: 0.75rem;
    width: 100%;
    min-height: 15vh;
    /*------*/
    gap: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    /*----*/
    background: rgba(168, 126, 126, 0.2);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(168, 126, 126, 0.3);
  }
</style>
